{# templates/licorne/_form.html.twig #}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            {{ form_start(form, {'attr': {'class': 'form'}}) }}
                {{ form_row(form.nom, {'attr': {'class': 'form-control mb-3'}}) }}
                {{ form_row(form.strenght, {'attr': {'class': 'form-control mb-3'}}) }}
                {{ form_row(form.intelligence, {'attr': {'class': 'form-control mb-3'}}) }}
                {{ form_row(form.esquive, {'attr': {'class': 'form-control mb-3'}}) }}
                {{ form_row(form.pv, {'attr': {'class': 'form-control mb-3'}}) }}

                <button type="submit" class="btn btn-primary">Jouer</button>
            {{ form_end(form) }}
        </div>
    </div>
</div>
